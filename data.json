            {
                "chapterNumber": 2,
                "chapterName": "Tác hại của tệ nạn ma tuý",
                "chapterContents": {
                    "statements": [
                        {
                            "statement_id": "statement1",
                            "statement_text": "Tác hại đối với người sử dụng",
                            "statement_content": [
                                {
                                    "substatement_id": "substatement1",
                                    "substatement_text": "Huỷ hoại sức khoẻ",
                                    "substatement_content": [
                                        " Gây rối loạn sinh lý, tàn phá cơ thể, đặc biệt là hệ tiêu hóa, tuần hoàn và thần kinh. ",
                                        "Ma túy gây ức chế hô hấp, có thể dẫn đến ngưng thở đột ngột và tử vong",
                                        "Các chất ma túy kích thích tim, gây co thắt mạch vành, dẫn đến đau thắt ngực, nhồi máu cơ tim và rối loạn nhịp tim"
                                    ]
                                },
                                {
                                    "substatement_id": "substatement2",
                                    "substatement_text": "Suy giảm chức năng sinh dục",
                                    "substatement_content": [
                                        "Làm giảm khả năng tình dục rõ rệt, gây chứng vú to và bất lực ở nam giới, rối loạn kinh nguyệt, rong kinh, tăng tiết sữa bất thường và vô sinh ở phụ nữ."
                                    ]
                                },
                                {
                                    "substatement_id": "substatement3",
                                    "substatement_text": "Ảnh hưởng tinh thần, nhân cách"
                                },
                                {
                                    "substatement_id": "substatement4",
                                    "substatement_text": "Nguy cơ lây nhiễm HIV/AIDS, viêm gan B, C",
                                    "substatement_content": [
                                        "Tiêm chích ma túy mà sử dụng chung kim tiêm đặc biệt kim tiêm không được xử lý khử trùng đúng cách là con đường lây nhiễm HIV, viêm gan virus B, C phổ biến nhất tại Việt Nam."
                                    ]
                                },
                                {
                                    "substatement_id": "substatement5",
                                    "substatement_text": "Hành vi lệch chuẩn, vi phạm pháp luật",
                                    "substatement_content": [
                                        "Do lệ thuộc vào ma túy, người nghiện dễ bỏ qua các nhu cầu khác trong cuộc sống và có thể làm bất cứ điều gì, kể cả cướp tài sản, trộm cắp, giết người, lừa đảo để có tiền mua ma túy."
                                    ]
                                }
                            ]
                        },
                        {
                            "statement_id": "statement2",
                            "statement_text": "Tác hại đối với gia đình",
                            "statement_content": [
                                {
                                    "substatement_id": "substatement1",
                                    "substatement_text": "Ảnh hưởng hạnh phúc gia đình",
                                    "substatement_content": [
                                        "Gây không khí bất hòa, cãi cọ, xô xát, con cái không được quan tâm, có thể dẫn đến bỏ học, lang thang.",
                                        "Hạnh phúc gia đình có thể tan vỡ, ly thân, ly hôn."
                                    ]
                                },
                                {
                                    "substatement_id": "substatement2",
                                    "substatement_text": "Ảnh hưởng kinh tế gia đình",
                                    "substatement_content": [
                                        " Người nghiện thường bị đuổi việc, làm mất nguồn thu nhập chính, tiêu tốn tài sản, tiền bạc của bản thân và gia đình."
                                    ]
                                },
                                {
                                    "substatement_id": "substatement3",
                                    "substatement_text": "Ảnh hưởng đến sự phát triển của con cái",
                                    "substatement_content": [
                                        "Ma túy gây giảm khả năng sinh sản hoặc sinh con ốm yếu, chậm phát triển trí tuệ",
                                        "Con cái của người nghiện có nguy cơ cao bỏ học và sa vào các tệ nạn xã hội."
                                    ]
                                }
                            ]
                        },
                        {
                            "statement_id": "statement3",
                            "statement_text": "Tác hại đối với nền kinh tế",
                            "statement_content": [
                                {
                                    "substatement_id": "substatement1",
                                    "substatement_text": "Gây tổn thất tài chính lớn",
                                    "substatement_content": [
                                        "Nhà nước phải chi hàng ngàn tỷ đồng cho việc mua ma túy hàng năm và hàng trăm tỷ đồng cho công tác xóa bỏ cây thuốc phiện, cai nghiện và đấu tranh phòng, chống tội phạm ma túy."
                                    ]
                                },
                                {
                                    "substatement_id": "substatement2",
                                    "substatement_text": "Suy giảm lực lượng lao động",
                                    "substatement_content": [
                                        "Người nghiện ma túy chủ yếu ở độ tuổi lao động, làm giảm cả số lượng và chất lượng lực lượng lao động, gây khó khăn trong việc đào tạo thay thế."
                                    ]
                                },
                                {
                                    "substatement_id": "substatement3",
                                    "substatement_text": "Ảnh hưởng đến đầu tư và phát triển bền vững",
                                    "substatement_content": [
                                        "Tệ nạn ma túy làm giảm thu nhập quốc dân, tăng chi phí y tế, ảnh hưởng xấu đến tâm lý các nhà đầu tư nước ngoài và khách du lịch, cản trở sự phát triển kinh tế bền vững."
                                    ]
                                }
                            ]
                        },
                        {
                            "statement_id": "statement4",
                            "statement_text": "Tác hại đối với xã hội",
                            "statement_content": [
                                {
                                    "substatement_id": "substatement1",
