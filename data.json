                                                },
                                                {
                                                    "statement_id": "statement3",
                                                    "statement_text": "Phân loại dựa trên độ nguy hiểm của ma tuý"
                                                },
                                                {
                                                    "statement_id": "statement4",
                                                    "statement_text": "Phân loại dựa trên các chất có trong ma tuý"
                                                }
                                            ]
